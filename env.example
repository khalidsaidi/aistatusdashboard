# AI Status Dashboard - Environment Configuration Template
# Copy this to .env.local for local development

# === ENVIRONMENT IDENTIFICATION ===
NODE_ENV=development
NEXT_PUBLIC_ENVIRONMENT=local

# === SITE CONFIGURATION ===
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# === API CONFIGURATION ===
# For local development, you can use:
# - Local API: /api (default for tests)
# - Dev backend: https://us-central1-YOUR-DEV-PROJECT.cloudfunctions.net/api
# - Local functions: http://localhost:5001/YOUR-PROJECT/us-central1/api
NEXT_PUBLIC_API_BASE_URL=/api

# === FIREBASE CONFIGURATION ===
# Replace with your actual Firebase project IDs
FIREBASE_PROJECT_ID=your-dev-project-id
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-dev-project-id

# Firebase web app configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your-measurement-id

# Firebase Functions region
FIREBASE_FUNCTIONS_REGION=us-central1

# === FEATURE FLAGS ===
ENABLE_REAL_TIME=true
ENABLE_NOTIFICATIONS=false
ENABLE_ANALYTICS=false
ENABLE_CACHING=true
ENABLE_MONITORING=false

# === PERFORMANCE SETTINGS ===
CACHE_TTL=60000
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=10000
BATCH_SIZE=10
RATE_LIMIT_MAX_REQUESTS=60
RATE_LIMIT_WINDOW_MS=60000

# === DEVELOPMENT OPTIONS ===
# Set to true to use local API instead of Firebase Functions
USE_LOCAL_API=false

# Set to true to use Firebase emulators
USE_FIREBASE_EMULATOR=false

# === OPTIONAL SERVICES ===
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Email configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-app-password

# Webhook configuration
WEBHOOK_SECRET=your-webhook-secret

# === TESTING ===
# These are automatically set in test environment
# JEST_TIMEOUT=60000
# TEST_API_URL=http://localhost:3000 