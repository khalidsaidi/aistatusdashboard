{
  "name": "ai-status-dashboard",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --project tsconfig.ci.json",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:integration": "jest --testPathPattern=__tests__/integration --testTimeout=30000",
    "test:e2e": "playwright test",
    "test:e2e:critical": "TEST_TYPE=critical playwright test",
    "test:e2e:smoke": "TEST_TYPE=smoke playwright test",
    "test:e2e:extended": "TEST_TYPE=extended playwright test",
    "test:e2e:accessibility": "TEST_TYPE=accessibility playwright test",
    "test:e2e:performance": "TEST_TYPE=performance playwright test",
    "test:e2e:security": "TEST_TYPE=security playwright test",
    "test:e2e:integration": "TEST_TYPE=integration playwright test",
    "test:e2e:ui": "TEST_TYPE=ui playwright test",
    "test:e2e:mobile": "TEST_TYPE=mobile playwright test",
    "test:e2e:cross-browser": "TEST_TYPE=cross-browser playwright test",
    "test:e2e:deployment": "playwright test __tests__/e2e/deployment-build.test.ts",
    "test:load": "node scripts/load-test.js",
    "test:smoke": "node scripts/smoke-test.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky install",
    "ci:install-deps": "npx playwright install --with-deps",
    "ci:install-browsers": "npx playwright install chromium firefox webkit msedge",
    "ci:setup": "npm run ci:install-deps && npm run ci:install-browsers",
    "ci:test-critical": "TEST_TYPE=critical npm run test:e2e:critical",
    "ci:test-comprehensive": "npm run test:e2e:smoke && npm run test:e2e:ui && npm run test:e2e:integration",
    "ci:test-production": "npm run test:e2e:extended && npm run test:e2e:accessibility && npm run test:e2e:performance",
    "ci:health-check": "curl -f http://localhost:3000/api/health || exit 1"
  },
  "dependencies": {
    "@types/nodemailer": "^6.4.17",
    "@types/web-push": "^3.6.4",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "bottleneck": "^2.19.5",
    "critters": "^0.0.25",
    "exponential-backoff": "^3.1.2",
    "firebase": "^10.1.0",
    "firebase-admin": "^13.4.0",
    "next": "^15.3.5",
    "nodemailer": "^7.0.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "web-push": "^3.6.7",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@playwright/test": "^1.36.2",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/cors": "^2.8.19",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "@types/node-fetch": "^2.6.12",
    "@types/react": "^18.2.17",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "artillery": "^2.0.0",
    "autoprefixer": "^10.4.14",
    "babel-jest": "^30.0.4",
    "eslint": "^8.46.0",
    "eslint-config-next": "^13.4.19",
    "firebase-tools": "^13.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "jest-junit": "^16.0.0",
    "lighthouse": "^11.0.0",
    "node-fetch": "^2.7.0",
    "postcss": "^8.4.27",
    "prettier": "^3.0.0",
    "serve": "^14.2.4",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.1.6",
    "undici": "^5.29.0",
    "whatwg-fetch": "^3.6.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
