{
  "name": "aistatusdashboard",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "author": "Khalid Saidi (Kalimero)",
  "scripts": {
    "dev": "next dev",
    "prebuild": "./scripts/fetch-ai-logos.sh",
    "build": "next build",
    "build:export": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{js,ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,json,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "test:all": "npm run test:unit && npm run test:e2e && npm run test:integration",
    "test:all:parallel": "concurrently \"npm run test:unit\" \"npm run test:e2e\"",
    "validate:workflows": "node scripts/validate-workflows.js",
    "validate:all": "npm run lint && npm run type-check && npm run validate:workflows",
    "firebase:setup": "node scripts/setup-firebase.js",
    "firebase:init": "firebase init --only firestore,functions,hosting,storage",
    "firebase:login": "firebase login",
    "firebase:dev": "firebase use ai-status-dashboard-dev",
    "firebase:prod": "firebase use ai-status-dashboard",
    "firebase:deploy:dev": "npm run firebase:dev && npm run build && firebase deploy",
    "firebase:deploy:prod": "npm run firebase:prod && npm run build && firebase deploy",
    "firebase:serve": "firebase serve --only hosting",
    "migrate:firestore": "node scripts/migrate-to-firestore.js"
  },
  "dependencies": {
    "dotenv": "^17.0.1",
    "firebase": "^10.14.1",
    "firebase-admin": "^12.7.0",
    "next": "14.2.3",
    "puppeteer": "^24.11.2",
    "react": "^18",
    "react-dom": "^18",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.53.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.5",
    "@types/node": "^20",
    "@types/node-fetch": "^2.6.12",
    "@types/react": "^18",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "critters": "^0.0.25",
    "eslint": "^8",
    "eslint-config-next": "15.1.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "js-yaml": "^4.1.0",
    "node-fetch": "^3.3.2",
    "playwright": "^1.53.2",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "serve": "^14.2.4",
    "ts-jest": "^29.1.1",
    "typescript": "^5"
  }
}
