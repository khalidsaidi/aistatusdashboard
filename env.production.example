# AI Status Dashboard - Production Environment
# Copy this to .env.production for production deployment

# === ENVIRONMENT ===
NODE_ENV=production

# === SITE CONFIGURATION ===
NEXT_PUBLIC_SITE_URL=https://aistatusdashboard.com
NEXT_PUBLIC_API_BASE_URL=https://us-central1-ai-status-dashboard.cloudfunctions.net

# === DEPLOYMENT CONFIGURATION (Optional - Override Defaults) ===
# DEFAULT_FIREBASE_PROJECT_ID=your-prod-project-id
# DEFAULT_FIREBASE_DEV_PROJECT_ID=your-dev-project-id
# FIREBASE_FUNCTIONS_REGION=us-central1
# PRODUCTION_SITE_URL=https://your-domain.com

# === EMAIL CONFIGURATION ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=status@aistatusdashboard.com
SMTP_PASSWORD=your-prod-app-password
DEFAULT_FROM=noreply@aistatusdashboard.com
DEFAULT_REPLY_TO=support@aistatusdashboard.com

# === FIREBASE CONFIGURATION (PRODUCTION BACKEND) ===
FIREBASE_PROJECT_ID=ai-status-dashboard
FIREBASE_PRIVATE_KEY_ID=your-prod-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-prod-private-key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@ai-status-dashboard.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-prod-client-id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# === FIREBASE WEB CONFIG (PRODUCTION) ===
NEXT_PUBLIC_FIREBASE_API_KEY=your-prod-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=ai-status-dashboard.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=ai-status-dashboard
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=ai-status-dashboard.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-prod-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-prod-app-id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your-prod-measurement-id

# === FIREBASE CLOUD MESSAGING ===
FCM_SERVER_KEY=your-prod-fcm-server-key
FCM_SENDER_ID=your-prod-sender-id
NEXT_PUBLIC_FCM_VAPID_KEY=your-prod-vapid-public-key
FCM_VAPID_PRIVATE_KEY=your-prod-vapid-private-key

# === WEBHOOK CONFIGURATION ===
WEBHOOK_SECRET=your-prod-webhook-secret

# === RATE LIMITING (Production - stricter) ===
RATE_LIMIT_MAX_REQUESTS=60
RATE_LIMIT_WINDOW_MS=60000

# === MONITORING ===
ENABLE_REAL_MONITORING=true
ENABLE_REAL_NOTIFICATIONS=true
ENABLE_REAL_EMAIL_SENDING=true

# === PROVIDER DISCOVERY ===
DISCOVERY_EMAIL_RECIPIENT=admin@aistatusdashboard.com
DISCOVERY_NOTIFICATION_WEBHOOK=https://hooks.slack.com/services/your/slack/webhook

# === EXTERNAL SERVICES ===
SENDGRID_API_KEY=your-prod-sendgrid-api-key
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/webhook
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

# === ANALYTICS ===
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-HPNE6D3YQW

# === SECURITY (Production only) ===
FORCE_HTTPS=true
SECURE_COOKIES=true 