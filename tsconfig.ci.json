{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "next-env.d.ts", 
    "jest.d.ts", 
    "app/**/*.ts", 
    "app/**/*.tsx", 
    "lib/**/*.ts", 
    "lib/**/*.tsx", 
    "__tests__/**/*.ts", 
    "__tests__/**/*.tsx", 
    "scripts/**/*.ts", 
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules", 
    "functions", 
    "functions/**", 
    "**/functions/**", 
    "functions/src/**", 
    "functions/lib/**",
    "functions/**/*.ts",
    "functions/**/*.js"
  ]
} 