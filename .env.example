# AI Status Dashboard - Environment Configuration Template
# Copy this file to .env.local for development

# =============================================================================
# REQUIRED: Firebase Configuration
# =============================================================================
# Get these from your Firebase project console

# Firebase Admin SDK (for server-side operations)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key-here\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40your-project.iam.gserviceaccount.com

# Firebase Web App Config (for client-side)
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-firebase-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=1:your-sender-id:web:your-app-id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# =============================================================================
# OPTIONAL: Analytics & Monitoring
# =============================================================================

# Google Analytics (optional - for usage tracking)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-ZV3PS0MPQ7

# =============================================================================
# OPTIONAL: Email Configuration (for notifications)
# =============================================================================

# SMTP Settings (for email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourdomain.com

# =============================================================================
# OPTIONAL: Security (recommended for production)
# =============================================================================

# Cron auth for /api/cron/status + /api/cron/notifications
CRON_SECRET=change-me
# APP_CRON_SECRET=change-me
# Set to "true" to allow open cron endpoints even in production (not recommended)
APP_ALLOW_OPEN_CRON=false
# Set to "true" to require cron secrets in development (useful for staging)
APP_REQUIRE_CRON_SECRET=false

# Webhook registration auth for /api/webhooks
WEBHOOK_SECRET=change-me
# APP_WEBHOOK_SECRET=change-me
# Set to "true" to allow public webhook registration in production (not recommended)
APP_ALLOW_PUBLIC_WEBHOOKS=false
# Set to "true" to require webhook secrets in development (useful for staging)
APP_REQUIRE_WEBHOOK_SECRET=false

# =============================================================================
# OPTIONAL: Real Provider Probes (model-level)
# =============================================================================

# Enable real API probes (synthetic model-level metrics)
PROBE_REAL_ENABLED=false

# Provider API keys (set only for providers you want to probe)
OPENAI_API_KEY=
OPENAI_PROBE_MODEL=gpt-4o-mini
ANTHROPIC_API_KEY=
ANTHROPIC_PROBE_MODEL=claude-3-haiku-20240307
GOOGLE_GEMINI_API_KEY=
GEMINI_PROBE_MODEL=gemini-1.5-flash
COHERE_API_KEY=
COHERE_PROBE_MODEL=command-r
GROQ_API_KEY=
GROQ_PROBE_MODEL=llama3-8b-8192
MISTRAL_API_KEY=
MISTRAL_PROBE_MODEL=mistral-small-latest
DEEPSEEK_API_KEY=
DEEPSEEK_PROBE_MODEL=deepseek-chat
XAI_API_KEY=
XAI_PROBE_MODEL=grok-2-latest
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_DEPLOYMENT=your-deployment
AZURE_OPENAI_MODEL=gpt-4o
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BEDROCK_REGION=us-east-1
AWS_BEDROCK_MODEL_ID=amazon.titan-tg1-large

# =============================================================================
# OPTIONAL: Telemetry & Synthetic Ingestion
# =============================================================================

TELEMETRY_INGEST_SECRET=change-me
SYNTHETIC_INGEST_SECRET=change-me
TELEMETRY_PUBLIC_KEY=change-me
NEXT_PUBLIC_TELEMETRY_PUBLIC_KEY=change-me
# Set to "true" to allow public telemetry ingestion without a key
APP_ALLOW_PUBLIC_TELEMETRY=false

# =============================================================================
# OPTIONAL: Change Radar Admin
# =============================================================================

# Admin secret for creating/deleting Change Radar events
CHANGE_RADAR_SECRET=change-me
# APP_CHANGE_RADAR_SECRET=change-me
# Allow open admin operations (not recommended)
APP_ALLOW_CHANGE_RADAR=false

# =============================================================================
# OPTIONAL: External Event Ingestion (AWS/GCP/Better Stack)
# =============================================================================

AWS_INGEST_SECRET=change-me
APP_ALLOW_AWS_INGEST=false

GCP_INGEST_SECRET=change-me
APP_ALLOW_GCP_INGEST=false

BETTERSTACK_INGEST_SECRET=change-me
APP_ALLOW_BETTERSTACK_INGEST=false

# =============================================================================
# SETUP INSTRUCTIONS
# =============================================================================

# 1. Create a Firebase project at https://console.firebase.google.com
# 2. Enable Firestore, Functions, and Hosting
# 3. Generate a service account key and fill in the Firebase variables above
# 4. Copy this file to .env.local and fill in your actual values
# 5. Run: npm install && npm run dev

# For detailed setup instructions, see: README.md
